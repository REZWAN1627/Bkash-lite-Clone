<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainUI.FragmentUI.Settings.ChangeName">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ChangeName"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/_5sdp"></Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userCurrentFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RK"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/_5sdp"></Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/_5sdp"></Space>

            <EditText
                android:id="@+id/UserCurrentLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rezwan"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/relative_next_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_base_UI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/next_from_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:padding="@dimen/_5sdp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_baseline_arrow_forward_24" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>